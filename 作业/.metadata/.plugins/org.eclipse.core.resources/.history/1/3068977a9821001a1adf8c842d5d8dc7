package com.wentest.loginservlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import com.webtest.utils.DBUtil;
import com.webtest.user.User;

public class LoginServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) 
			throws ServletException, IOException {
		
	}
	@SuppressWarnings("null")
	protected void doPost(HttpServletRequest request, HttpServletResponse response) 
			throws ServletException, IOException {

		response.setContentType("text/html");
		response.setCharacterEncoding("utf-8");
		Connection conn = null;
		ResultSet rs = null;
		PreparedStatement ps = null;
		HttpSession session=request.getSession();
		
		User user=null;
		int flag = 0;
        String id = request.getParameter("id");   				
        String password = request.getParameter("password");    
        String leixing = request.getParameter("leixing");
        if (leixing.equals("xuesheng")) {
		try {
			conn = DBUtil.getConnection();
			String sql = "SELECT name FROM person WHERE id=? and password=?";
			ps = conn.prepareStatement(sql);
			ps.setString(1, id);
			ps.setString(2, password);
			rs = ps.executeQuery();
			if (rs.next()) {
                flag = 1;
                user.setId("id");
                user.setPassword("password");
                user.setUsername("username");
                session.setAttribute("uname", rs.getString(1));  
                session.setAttribute("uleixing", "学生"); 
            } else {
              
                request.setAttribute("err", "错误的学生用户名及密码！！！");
            }
            rs.close();
            ps.close();
            conn.close();
        } catch (Exception e) { 
        	e.printStackTrace();
        }
	}else{
			String sql = "SELECT name FROM guanliyuan WHERE id=? and password=?";
            try {
            	conn = DBUtil.getConnection();
                ps = conn.prepareStatement(sql);
                ps.setString(1, id);
                ps.setString(2, password);
                rs = ps.executeQuery();
                if (rs.next()) { 
                    flag = 2;
                	user.setId("id");
                    user.setPassword("password");
                    user.setUsername("username");
                    session.setAttribute("uname", rs.getString(1));
                    session.setAttribute("uleixing", "laoshi");  
                } else {
                    request.setAttribute("err", "错误的管理员用户名及密码！！！");
                }
                rs.close();
                ps.close();
                conn.close();
            } catch (Exception e) {
            	e.printStackTrace();
            }
            if (flag==1) {
                
            	 response.sendRedirect("index.jsp");
               
                }else if(flag==2){
                	response.sendRedirect("login_success.jsp");
                
                }else {
                	response.sendRedirect("login.jsp");
                  }
	      }
	 }
}
